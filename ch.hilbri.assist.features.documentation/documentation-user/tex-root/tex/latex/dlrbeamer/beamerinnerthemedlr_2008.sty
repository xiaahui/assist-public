% Define titlepage contents
%\setbeamertemplate{title page}{...}

% Define titlepage background
\renewcommand{\maketitle}{
  \ifbeamer@inframe
    \PackageWarningNoLine{beamerthemedlr}{Title page must be inserted using maketitle outside a frame}
    \titlepage
  \else
  {%
  \setbeamertemplate{headline}{}
  \setbeamercolor{footline}{fg=black}
  \addtobeamertemplate{footline}{%
		  \colorlet{DLRFLBarColor}{white}
	}{}
  \usebackgroundtemplate{%
    \begin{tikzpicture}
      \useasboundingbox (0,-\headheight) rectangle (0,-\headheight);
	    \draw[red](0pt,1pt) rectangle (\paperwidth,-\paperheight);
      \fill (0,1pt) rectangle (\paperwidth,-\paperheight) [dlrgray];
      \fill (-39:20.0cm) circle    (17.1cm)  [white];
      \fill (+19:17.1cm) circle    (17.1cm)  [white];
      \begin{scope}                                                  % Begin scope for...
        \clip (4.2cm,13.7cm) circle    (16.9cm);
        \clip (+19:17.1cm) circle    (17.0cm);
        %\node[inner sep=0mm] at (0.5\paperwidth,-21mm+1pt) {
	  		 % \pgfimage[width=1.2\paperwidth]{aeronautics}};
        \headlineimage;
	  	\end{scope}   
	  \end{tikzpicture}  
	}%
  \begin{frame}%[plain]
    \vspace{2cm}
    \titlepage
    \vfill
  \end{frame}
  }
  \fi
}

