   <extension id="application" point="org.eclipse.core.runtime.applications">
      <application cardinality="singleton-global" icon="icons/ASSIST-icon-64x64.png" thread="main" visible="true">
         <run
               class="ch.hilbri.assist.gui.Application">
         </run></application>
   </extension>
   
   <extension id="product" point="org.eclipse.core.runtime.products">
