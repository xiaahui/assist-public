	    <property name="appName" value="ASSIST"> </property>
	    <property name="applicationXMI" value="ch.hilbri.assist.gui/Application.e4xmi"></property>
  	</product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="ch.hilbri.assist.gui.MainPerspectiveFactory"
            fixed="true"
            id="ch.hilbri.assist.gui.perspective"
            name="ASSIST - Main">
      </perspective>
   </extension>

